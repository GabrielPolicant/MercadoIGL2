@model IEnumerable<MercadoIGL.Models.Produto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.funcionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fornecedor.Razaosocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.funcionario.Nome_Completo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo.TipoProduto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Produto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Produto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Produto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
